<header class="bg-white shadow-sm">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <!-- ロゴやサイト名 -->
          <%= link_to "Task App", "/", class: "text-xl font-bold text-gray-900" %>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <span class="text-sm text-gray-500">
            <%= current_user.email %> さん
          </span>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm font-medium text-gray-700 hover:text-indigo-600" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "text-sm font-medium text-gray-700 hover:text-indigo-600" %>
          <%= link_to "新規登録", new_user_registration_path, class: "ml-4 text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>